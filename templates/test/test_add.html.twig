<div class="modal" id="add-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h5 class="modal-title">Create test</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mt-3">
                        <label class="pb-2" for="inputCode">Title</label>
                        <input type="text" placeholder="Enter title" name="code" id="inputCode" class="form-control" autocomplete="username" required autofocus>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex">
                            <label class="pb-2" for="test-template">Test template</label>
                            <a href="#" class="ms-auto btn btn-primary btn-sm rounded-pill">Create template</a>
                        </div>
                        {% if templates is empty %}
                            <div id="test-template">There is no templates created yet</div>
                        {% else %}
                            <label class="pb-2" for="test-template">Title</label>
                            <select name="testTemplate" id="test-template" class="form-control" required autofocus>
                                <option value="" selected disabled hidden>Choose here</option>
                            </select>
                        {% endif %}
                    </div>
                    <div class="mt-3">
                        <label class="pb-2" for="date">Date</label>
                        <input type="date" placeholder="Enter Date" min="{{ "now"|date('Y-m-d') }}" max="{{ "now"|date_modify("+1 year")|date('Y-m-d') }}"  name="password" id="date" class="form-control" required>
                    </div>
                    <div class="mt-3">
                        <label class="pb-2" for="start-date">Start time</label>
                        <input type="time" min="08:00" max="21:00" value="{{ "now"|date('H:i') }}" name="start-date" id="date" class="form-control" required>
                    </div>
                    <div class="mt-3">
                        <label class="pb-2" for="end-date">End time</label>
                        <input type="time" min="08:00" max="21:00" id="end-date" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
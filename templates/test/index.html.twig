{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>Preview and create tests</h2>
        <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#add-modal">New test</button>
        {% if tests is empty %}
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">No test created</h5>
                </div>
            </div>
        {% endif %}
        {% for test in tests %}
            <div class="card mt-5">
                <div class="card-body">
                    <h5 class="card-title">Preview tests</h5>
                    <p class="card-text">Preview tests, create new ones</p>
                    <a href="#" class="btn btn-primary">Preview test</a>
                </div>
            </div>
        {% endfor %}
    </div>
    {% include 'test/test_add.html.twig' %}
{% endblock %}

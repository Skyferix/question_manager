<div class="modal" id="add-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="add-question-bank-form" method="post" action="/admin/question_bank/add">
                <div class="modal-header">
                    <h5 class="modal-title">Create question bank</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="error-message" class="text-danger"></div>
                    <div class="mt-3">
                        <label class="pb-2" for="question-bank-title">Title</label>
                        <input type="text" placeholder="Enter title" name="title" id="question-bank" class="form-control" autocomplete="username" required autofocus>
                    </div>
                    <div class="mt-3">
                        <label class="pb-2" for="question-bank-description">Description</label>
                        <textarea placeholder="Enter description" name="description" id="question-bank-description" class="form-control" autocomplete="username" required autofocus></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal" id="add-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h5 class="modal-title">Create test template</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mt-3">
                        <label class="pb-2" for="template-title">Template title</label>
                        <input type="text" placeholder="Enter title" name="code" id="template-title" class="form-control" autocomplete="username" required autofocus>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex">
                            <label class="pb-2" for="test-template">Question blocks</label>
                            <a href="#" class="ms-auto btn btn-primary btn-sm rounded-pill">Create question block</a>
                        </div>
                        {% if question_banks is empty %}
                            <div id="test-template">There is no templates created yet</div>
                        {% else %}
                            <label class="pb-2" for="test-template">Title</label>
                            <select name="testTemplate" id="test-template" class="form-control" required autofocus>
                                <option value="" selected disabled hidden>Choose here</option>
                            </select>
                        {% endif %}
                    </div>
                    <div class="mt-3 d-flex">
                        <label class="pb-2" for="template-title">Display question randomly</label>
                        <input class="ms-3 align-self-center" type="checkbox" style="height: 20px; width: 20px">
                    </div>
                    <div class="mt-3 d-flex">
                        <label class="pb-2" for="all-question-checkbox">Display all questions</label>
                        <input checked class="ms-3 align-self-center" type="checkbox" id="all-question-checkbox" style="height: 20px; width: 20px">
                    </div>
                    <div id="question-number-section" class="mt-3 d-none">
                        <label class="pb-2" for="number-of-questions">Number of questions to give</label>
                        <input disabled type="number" class="form-control" id="number-of-questions">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>